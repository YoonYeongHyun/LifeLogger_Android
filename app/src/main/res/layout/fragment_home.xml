<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="홈"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/colorPrimary"
            android:background="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/subTitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="홈 메뉴 버튼"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="214dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:layout_weight="1"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp">
                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="174dp"
                    android:background="@drawable/shadow_rectangle_all"
                    tools:layout_editor_absoluteX="10dp"/>
                <ImageButton
                    android:id="@+id/dataCheckButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="65dp"
                    android:layout_marginRight="65dp"
                    android:layout_marginBottom="80dp"
                    android:background="@color/white"
                    android:src="@drawable/data_check"
                    android:scaleType="fitXY"/>
                <TextView
                    android:id="@+id/menuTitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="수집 데이터 현황"
                    android:textSize="18sp"
                    android:layout_alignStart="@+id/view1"
                    android:layout_alignEnd="@+id/view1"
                    android:layout_alignBottom="@+id/view1"
                    android:layout_marginBottom="40dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:paddingEnd="15dp">
                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="174dp"
                    android:background="@drawable/shadow_rectangle_all"
                    tools:layout_editor_absoluteX="10dp"/>
                <ImageButton
                    android:id="@+id/connectButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="65dp"
                    android:layout_marginRight="65dp"
                    android:layout_marginBottom="80dp"
                    android:background="@color/white"
                    android:src="@drawable/healthconnect"
                    android:scaleType="fitXY"/>
                <TextView
                    android:id="@+id/menuTitle2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/view2"
                    android:layout_marginBottom="40dp"
                    android:gravity="center"
                    android:text="헬스 커넥트"
                    android:textSize="18sp" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="214dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_weight="1"
                android:paddingStart="15dp">
                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="174dp"
                    android:background="@drawable/shadow_rectangle_all"
                    tools:layout_editor_absoluteX="10dp" />
                <ImageButton
                    android:id="@+id/samsungButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="65dp"
                    android:layout_marginRight="65dp"
                    android:layout_marginBottom="80dp"
                    android:background="@color/white"
                    android:src="@drawable/samsunghealth"
                    android:scaleType="fitXY"/>
                <TextView
                    android:id="@+id/menuTitle3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/view3"
                    android:layout_marginBottom="40dp"
                    android:gravity="center"
                    android:text="삼성헬스"
                    android:textSize="18sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="10dp"
                android:paddingTop="20dp"
                android:paddingEnd="15dp"
                android:paddingBottom="20dp">

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>