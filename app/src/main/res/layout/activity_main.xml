<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/stepCountTag"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:text="걸음수 :"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/stepCountView"
        android:layout_width="18dp"
        android:layout_height="40dp"
        android:text="0"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/stepCountTag"
        app:layout_constraintStart_toEndOf="@+id/stepCountTag"
        app:layout_constraintTop_toTopOf="@+id/stepCountTag"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/lightView"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="0"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/lightTag"
        app:layout_constraintStart_toEndOf="@+id/lightTag"
        app:layout_constraintTop_toTopOf="@+id/lightTag"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/lightTag"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="16dp"
        android:text="조도 :"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/stepCountView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/latitude"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:text="위도 : "
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stepCountTag" />

    <TextView
        android:id="@+id/longitudeView"
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:layout_marginTop="12dp"
        android:text="0"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/longitude"
        app:layout_constraintTop_toBottomOf="@+id/latitudeView" />

    <TextView
        android:id="@+id/longitude"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="52dp"
        android:text="경도 : "
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/latitude" />

    <TextView
        android:id="@+id/latitudeView"
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:text="0"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/latitude"
        app:layout_constraintTop_toBottomOf="@+id/lightTag" />

    <TextView
        android:id="@+id/decibel"
        android:layout_width="198dp"
        android:layout_height="207dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarFadeDuration="5000"
        android:scrollbarSize="10dp"
        android:scrollbarStyle="outsideInset"
        android:scrollbars="vertical"
        android:text="0"
        app:layout_constraintStart_toEndOf="@+id/text_view_id"
        app:layout_constraintTop_toBottomOf="@+id/end_button" />

    <TextView
        android:id="@+id/text_view_id"
        android:layout_width="122dp"
        android:layout_height="205dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="115dp"
        android:ellipsize="end"
        android:maxLines="999"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarFadeDuration="5000"
        android:scrollbarSize="10dp"
        android:scrollbarStyle="outsideInset"
        android:scrollbars="vertical"
        android:text="테스트1\n"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stepCountTag"
        app:layout_constraintVertical_bias="0.921" />

    <Button
        android:id="@+id/end_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="16dp"
        android:text="수집 종료"
        app:layout_constraintBottom_toTopOf="@+id/text_view_id"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginBottom="16dp"
        android:text="수집 시작"
        app:layout_constraintBottom_toTopOf="@+id/text_view_id"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/call"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="60dp"
        android:text="통화수 : "
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/longitude" />

    <TextView
        android:id="@+id/callNum"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="0"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/call"
        app:layout_constraintTop_toBottomOf="@+id/longitudeView" />
</androidx.constraintlayout.widget.ConstraintLayout>